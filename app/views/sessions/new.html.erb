<div class="grid_12">
	<h1>Log in</h1>
</div>
<div class="clear"></div>
<%= form_tag sessions_path do %>
	<div class="grid_6">
		<div class="field">
			<%= label_tag :email %><br />
			<%= text_field_tag :email, params[:email] %>
		</div>
	</div>
	<div class="grid_6">
		<div class="field">
			<%= label_tag :password %><br />
			<%= password_field_tag :password %>
		</div>
	</div>
	<div class="grid_12">
		<div class="actions">
			<%= submit_tag "Log in" %>
		</div>
	</div>
<% end %>