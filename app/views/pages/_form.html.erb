<%= form_for @page do |f| %>
	<% if @page.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
			<ul>
				<% @page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :title %><br /><%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :body %><br /><%= f.cktext_area :body %>
	</div>

	<div class="field">
		<%= f.label :author %><br /><%= f.text_field :author %>
	</div>

	<div class="field">
		<%= f.label :email %><br /><%= f.text_field :email %>
	</div>

	<div class="field">
		<%= f.label :reference_id %><br /><%= f.select :reference_id, Reference.all.map { |e| [e.name, e.id] } %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>