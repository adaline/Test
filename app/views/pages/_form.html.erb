<%= form_for @page do |f| %>
	<% if @page.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
			<ul>
				<% @page.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :title %><br /><%= f.text_field :heading %>
	</div>
	
	<div class="field">
		<%= f.label :content %><br /><%= f.cktext_area :content %>
	</div>
	
	<div class="field">
		<%= f.label :url %><br />
		<% if(@page.system) %>
			<%= f.text_field :url, :disabled => true %>
		<% else %>
			<%= f.text_field :url %>
		<% end %>
	</div>

	<div class="field">
		<%= f.label :title %><br /><%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :description %><br /><%= f.text_field :description %>
	</div>

	<div class="field">
		<%= f.label :keywords %><br /><%= f.text_field :keywords %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>